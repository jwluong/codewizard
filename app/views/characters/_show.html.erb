<div class="filter town_pro_fil">
  <div class="container show_cont">
  <div class="nes-container is-rounded w-50" style="background-color: white">
    <a class="close_lnk"><i id="close" class="nes-icon close is-small close_btn profile-close" style="position: absolute; right: 5px; top: 5px"></i></a>
    <div class="nes-container with-title is-rounded nes_prof">
      <p class="title">Profile</p>


      <div class="town_pro_info">
        <div>
          <p>Name: </p>
          <p>Gender: </p>
          <br>
          <p>LV. </p>
          <p>HP: </p>
          <p>EXP: </p>
          <p> <%= image_tag "coin", alt: "alttext", class: "coin_gif" %>:</p>
          <p>Items: </p>

        </div>

        <div class="town_pro_rlinfo">
          <div>
            <p><%= @character.name %></p>
            <% if @character.gender == 'male' %>
              <p>Wizard</p>
            <% else %>
              <p>Witch</p>
            <% end %>
            <br>
            <p><%= @character.lv %></p>
            <p><%= @character.hp %>/<%= @character.maxHealth %></p>
            <p><%= @character.exp %></p>
            <p><%= @character.coin %></p>
            <% @character.items.each do |item| %>
              <p><%= item.name %></p>
            <% end %>
          </div>
        </div>

      </div>
    </div>
    <br>
    <div class="nes-container with-title is-rounded">
      <p class="title">Settings</p>
      <div class=" d-flex justify-content-around">
        <div class="char_logout">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nes-btn is-error log-out-btn" %>
        </div>
        <div class="nes-btn is-primary">
          <i class="fas fa-volume-up fa-2x"></i>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
