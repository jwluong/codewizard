<div class="landing vh-100 min-vw-100 d-flex justify-content-center align-items-center" style="background-image: url( <%= image_url "landing.jpg" %>">
  <div class="nes-container is-rounded w-50 info-box">
    <div class="form">
      <h1 class="text-center">Sign up</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
          required: true,
          autofocus: true,
          defaults: { wrapper: false },
          input_html: { id: "name_field", class: "nes-input" }%>
          <%= f.input :password,
          required: true,
          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
          defaults: { wrapper: false },
          input_html: { id: "name_field", class: "nes-input" } %>
          <%= f.input :password_confirmation,
          required: true,
          defaults: { wrapper: false },
          input_html: { id: "name_field", class: "nes-input" } %>
        </div>
        <div class="d-flex justify-content-center form-actions">
          <%= f.button :submit, "Sign up", class: "m-3 nes-btn is-primary"%>
        </div>
      <% end %>
      <div class="d-flex justify-content-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<%= audio_tag 'landing.mp3', loop: true, id: "audio_landing"%>

<script>
  function playMusic(){
      var promise = document.getElementById('audio_landing').play();
      if (promise !== undefined) {
          promise.then(_ => {
              // Autoplay started!
          }).catch(error => {
              // Autoplay was prevented. Show a "Play" button so that user can start playback.
          });
      }
  }
  playMusic()
</script>
