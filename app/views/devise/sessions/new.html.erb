<div class="landing vh-100 min-vw-100 d-flex justify-content-center align-items-center" style="background-image: url( <%= image_url "landing.jpg" %>">
  <div class="nes-container is-rounded w-50 info-box">
    <div class="form">
    <h1 class="text-center">Log in</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    defaults: { wrapper: false },
                    input_html: { id: "name_field", class: "nes-input" }  %>
        <%= f.input :password,
                    required: false,
                    defaults: { wrapper: false },
                    input_html: { id: "name_field", class: "nes-input" } %>
        <%= f.input :remember_me,

                    input_html: { class: "nes-checkbox" }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="d-flex form-actions justify-content-center">
        <%= f.button :submit, "Log in", class: "nes-btn is-primary"%>
      </div>
    <% end %>
    <div class="d-flex justify-content-center align-items-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<%= audio_tag 'landing.mp3', loop: true, id: "audio_landing"%>

<script>
  function playMusic(){
      var promise = document.getElementById('audio_landing').play();
      if (promise !== undefined) {
          promise.then(_ => {
              // Autoplay started!
          }).catch(error => {
              // Autoplay was prevented. Show a "Play" button so that user can start playback.
          });
      }
  }
  playMusic()
</script>

