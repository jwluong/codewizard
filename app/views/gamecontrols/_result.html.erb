
<div class="result_body" style="background-image: url( <%= image_url "score_board.jpg", alt: "score_board" %> )">
  <div class="filter">
    <div class="show-border nes-container is-rounded rslt_border">
      <h2 class="result-title">Congratulations!</h2>
      <p>You've done an excellent job in</p>
      <p> <%= @level.name %>!</p>
      <div class="nes-container with-title is-centered is-rounded rslt_prof">
        <p class="title">Result</p>
        <div class="rslt_info">
        <div>
          <p>Time: </p>
          <p>Lv.</p>
          <p>Exp:  </p>
          <p>Coin: </p>
        </div>

        <div class="rslt_rlinfo">
          <div>
          <p>01:23</p>
          <p><%= @character.lv %></p>
          <p>+<%= @level.questions.length %></p>
          <p>+<%= @level.questions.length * 10 %></p>
          </div>
        </div>
        </div>
      </div>
      <div class="hint-button-block">
        <%= link_to "Town", town_path, class: "nes-btn rslt_btn"%>
        <% if @level != Level.last %>
          <%= link_to "Next", level_path(Level.find(@level.id + 1).questions[0]), class: "nes-btn is-warning hint-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
