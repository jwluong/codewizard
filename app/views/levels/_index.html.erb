<div class="filter">
  <div class="container d-flex align-items-center vh-100">
    <div class="nes-container is-rounded levels-box">

      <a><i id='close' class="nes-icon close is-small" style="float: right;"></i></a>
      <h1 class="text-center">Select a level</h1>

      <div class="nes-container is-rounded with-title track" style="background-image: url(<%= image_url "forest.png" %>);">
        <p class="title">Easy</p>
        <div class="level-button">
          <% @levels.each do |level| %>
            <% if level.track == "easy" %>
                <%= link_to level.name, level_path(level.questions[0]), class: "level-card m-2 nes-btn is-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="nes-container is-rounded with-title track" style="background-image: url(<%= image_url "desert.jpg" %>);">
        <p class="title">Med.</p>
        <div class="level-button">
          <% @levels.each do |level| %>
            <% if level.track == "medium" %>
                <%= link_to level.name, level_path(level.questions[0]), class: "level-card m-2 nes-btn is-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="nes-container is-rounded with-title track" style="background-image: url(<%= image_url "ice.jpg" %>);">
        <p class="title">Hard</p>
        <div class="level-button">
          <% @levels.each do |level| %>
            <% if level.track == "hard" %>
                <%= link_to level.name, level_path(level.questions[0]), class: "level-card m-2 nes-btn is-primary" %>
            <% end %>
          <% end %>
        </div>

    </div>
  </div>
</div>

